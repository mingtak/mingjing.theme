<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="mingjing.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<?python
from plone import api
from DateTime import DateTime
portal = api.portal.get()
news = api.content.find(context=portal['news']['1'], Type='News Item', sort_on='modified', sort_order='reverse')
hots = api.content.find(context=portal['news']['2'], Type='News Item', sort_on='modified', sort_order='reverse')
youtubes = api.content.find(context=portal, Type='Youtube', sort_on='created', sort_order='reverse')
?>

                <!-- template -->
<section tal:define="items python:list(news)[0:8];
                     main_slider_id string:cover_main_slider_1">
    <metal:macro use-macro="context/@@mingjing_macro/macros/main_slider"/>
</section>
                <!-- end of template -->


<section>
    <div class="parallax-content">

        <h3 class="title-border">熱門話題</h3>
        <div class="row" tal:define="items python:list(hots)[0:4]">
            <metal:macro use-macro="context/@@mingjing_macro/macros/listing_with_preview"/>
        </div>
        <div class="row">
            <div class="col-sm-12 mv3 mvt0">
                <a href="entertainment.html">
                    <img src="https://tpc.googlesyndication.com/simgad/15926840416994248994" alt="廣告" class="full-size">
                </a>
            </div>
        </div>





<!-- 明鏡火拍 -->
<tal:items define="items python:youtubes[0:6]">
            <metal:macro use-macro="context/@@mingjing_macro/macros/mingjing_youtube"/>
</tal:items>







<!-- 最新播報 -->
<h3 class="title-border">最新播報</h3>
<div class="row" tal:define="items python:list(news)[0:6]">


<div class="col-md-6">
        <div class="category-block articles">


      <tal:item repeat="item items">
                                <div class="post hover-light" tal:condition="repeat/item/even">
                                    <a href="${item/absolute_url}">
                                        <div class="image image-thumb"
                                             data-src="${item/getURL}/@@images/image/mini"
                                             style="background-image: url('${item/getURL}/@@images/image/mini');"></div>
                                    </a>
                                    <h4><a href="${item/getURL}">${item/Title}</a></h4>
                                    <p>${python:item.Description[0:110]}...</p>
                                    <div class="meta">
                                        <span class="theme-cover-span date">${python:int(DateTime()-item.created)} 小時前</span>
                                    </div>
                                </div>
      </tal:item>



                            </div>
</div>
                           <!-- end .category-block -->

<div class="col-md-6">

                            <div class="category-block articles">
<tal:item repeat="item items">
                                <div class="post hover-light" tal:condition="repeat/item/odd">
                                    <a href="${item/getURL}">
                                        <div class="image image-thumb"
                                             data-src="${item/getURL}/@@images/image/mini"
                                             style="background-image: url('${item/getURL}/@@images/image/mini');"></div>
                                    </a>
                                    <h4><a href="${item/getURL}">${item/Title}</a></h4>
                                    <p>${python:item.Description[0:110]}...</p>
                                    <div class="meta">
                                        <span class="theme-cover-span date">${python:int(DateTime()-item.created)} 小時前</span>
                                    </div>
                                </div>
</tal:item>

                            </div>
                            <!-- end .category-block -->


</div>








</div>



</div>
<!-- end .parallax-column -->









</section>


</metal:content-core>
</metal:content-core>

</body>
</html>

