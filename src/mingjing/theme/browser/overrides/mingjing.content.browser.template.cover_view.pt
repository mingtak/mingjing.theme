<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="mingjing.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<?python
from plone import api
import random
from DateTime import DateTime
portal = api.portal.get()
news = api.content.find(context=portal['news']['1'], Type='News Item', sort_on='modified', sort_order='reverse')
hots = api.content.find(context=portal['news']['2'], Type='News Item', sort_on='modified', sort_order='reverse')
youtubes = api.content.find(context=portal, Type='Youtube', sort_on='created', sort_order='reverse')
shuffleBrain = list(news)
tabsBrain = []
for i in range(10):
    random.shuffle(shuffleBrain)
    tabsBrain.append(shuffleBrain[0:5])
ebook = api.content.find(context=portal, Type='Ebook', sort_on='created', sort_order='reverse')
?>

<!-- 首頁 Main slider start -->
<section tal:define="items python:list(news)[0:10];
                     main_slider_id string:cover_main_slider_1">
    <metal:macro use-macro="context/@@mingjing_macro/macros/main_slider"/>
</section>
<!-- 首頁 Main slider end -->


<section>
    <div class="parallax-content">

<!-- 電視 -->
        <h3 class="category-title"><span>電視</span></h3>

        <div class="row">
            <div class="col-sm-12" tal:define="items python:list(youtubes);
                                               tmp python:random.shuffle(items);
                                               items python:items[0:5];
                                               live_slider_id string:cover_live_slider_3; 
                                               col string:owl-carousel-12">
                <metal:macro use-macro="context/@@mingjing_macro/macros/live_slider" />
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12 col-md-6" tal:define="items python:list(youtubes);
                                               tmp python:random.shuffle(items);
                                               items python:items[0:20];
                                               live_slider_id string:cover_live_slider_3;
                                               col string:owl-carousel-12;
                                               t_title string:明鏡電視">
                <h4 class="program-h4">${t_title}</h4>
                <metal:macro use-macro="context/@@mingjing_macro/macros/live_program" />
            </div>
            <div class="col-sm-12 col-md-6" tal:define="items python:list(youtubes);
                                               tmp python:random.shuffle(items);
                                               items python:items[0:20];
                                               live_slider_id string:cover_live_slider_3;
                                               col string:owl-carousel-12;
                                               t_title string:明鏡24小時">
                <h4 class="program-h4">${t_title}</h4>
                <metal:macro use-macro="context/@@mingjing_macro/macros/live_program" />
            </div>
        </div>

<!-- Ad block -->
<p class="margin-line"/>
        <div class="row">
            <div class="col-sm-12 mv3 mvt0">
                <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block"/>
            </div>
        </div>

<!-- 今日播報 -->
        <h3 class="category-title"><span>今日播報</span></h3>
        <div class="row" tal:define="items python:list(news)[0:8]">
            <metal:macro use-macro="context/@@mingjing_macro/macros/listing_with_mini" />
        </div>


<!-- Ad block -->
<p class="margin-line"/>
        <div class="row">
            <div class="col-sm-12 mv3 mvt0">
                <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block"/>
            </div>
        </div>


<!-- Tabs -->
        <div class="row">
            <div class="col-sm-6"
                 tal:define="tabs_name python:['房地產', '財經', '汽車', '購物', '法律'];
                             tabs_id_prefix string:cover_tabs_1;
                             brains python:tabsBrain[0:5];">
                <metal:macro use-macro="context/@@mingjing_macro/macros/views_tabs" />
            </div>
            <div class="col-sm-6"
                 tal:define="tabs_name python:['旅遊', '美食', '健康', '教育', '生活'];
                             tabs_id_prefix string:cover_tabs_2;
                             brains python:tabsBrain[5:10];">
                <metal:macro use-macro="context/@@mingjing_macro/macros/views_tabs" />
            </div>
        </div>


<!-- Ad block -->
        <div class="row">
            <div class="col-sm-12 mv3 mvt0">
                <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block"/>
            </div>
        </div>

<!-- Tabs -->
        <div class="row">
            <div class="col-sm-6"
                 tal:define="tabs_name python:['時尚', '體育', '科技', '人文', '娛樂'];
                             tabs_id_prefix string:cover_tabs_3;
                             brains python:tabsBrain[3:8];">
                <metal:macro use-macro="context/@@mingjing_macro/macros/views_tabs" />
            </div>
            <div class="col-sm-2" tal:repeat="item python:['最新書刊', '最熱書刊', '電子書刊']">
                <h5 class="category-title ebook"><span>${item}</span></h5>
                <div class="ebook-cover">
                    <a href="${python:ebook[repeat['item'].index].getURL()}" title="${python:ebook[repeat['item'].index].Title}">
                        <img src="${python:ebook[repeat['item'].index].getURL()}/@@images/image" alt="${python:ebook[repeat['item'].index].Description}"/>
                    </a>
                </div>
<!--                <p>
                    <a href="${python:ebook[repeat['item'].index].getURL()}" title="${python:ebook[repeat['item'].index].Title}">
                        ${python:ebook[repeat['item'].index].Title[0:42]}${python:'...' if len(ebook[repeat['item'].index].Title)>42 else None}
                    </a>
                </p>
-->
            </div>
        </div>


<!-- 排行榜 -->
        <h3 class="category-title"><span>排行榜</span></h3>
        <div class="row" tal:define="items python:list(news)[0:6]">
            <metal:macro use-macro="context/@@mingjing_macro/macros/listing_with_mini" />
        </div>

    </div>
    <!-- end .parallax-content -->

</section>


</metal:content-core>
</metal:content-core>

</body>
</html>

