<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="mingjing.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<?python
from plone import api
from DateTime import DateTime
portal = api.portal.get()
news = api.content.find(context=portal['news']['1'], Type='News Item', sort_on='modified', sort_order='reverse')
hots = api.content.find(context=portal['news']['2'], Type='News Item', sort_on='modified', sort_order='reverse')
youtubes = api.content.find(context=portal, Type='Youtube', sort_on='created', sort_order='reverse')
?>

                <!-- template -->
<section>
                <div class="news-slider news-block mv5 mvt0">

                    <!-- masterslider -->
                    <div class="master-slider ms-skin-default" id="masterslider1">

        
                        <div class="ms-slide" data-delay="8" tal:repeat="item python:list(news)[0:8]">
                            <img src="/++resource++mingjing.theme/images/blank.gif"
                                 tal:attributes="data-src string:${item/getURL}/@@images/image/preview;
                                                 alt item/Title"/>

                            <div class="ms-thumb post hover-zoom">
                                <div class="thumb-meta">
<!--                                    <div class="meta">
                                        <span class="author">Dave Clark</span>
                                        <span class="date">2h</span>
                                    </div>
-->
                                    <h4 tal:content="item/Title">All Roads Lead to Cleveland Behind Marie</h4>
                                </div>
                            </div>
                            
                            <div class="ms-layer box" data-delay="0" data-effect="bottom(45)" data-duration="300" data-ease="easeInOut">

<!--                                <div class="meta animate-element" data-anim="fadeInUp">
                                    <span class="author">Dave Clark</span>
                                    <span class="date">2h</span>
                                </div>
-->
                                <h4 class="animate-element" data-anim="fadeInUp">
                                <a tal:attributes="href item/getURL" tal:content="item/Title">Title</a></h4>
                                <p class="animate-element" data-anim="fadeInUp" tal:content="item/description">Description</p>

                            </div>

                        </div>
                                            

                    </div>
                    <!-- end of masterslider -->

                </div>
</section>
                <!-- end of template -->


<section>
<div class="parallax-content">
<h3 class="title-border">熱門話題</h3>
                            <div class="row">

<tal:repeat repeat="item python:list(hots)[0:4]">
                                  <div class="col-md-6">
                                    <div class="category-block articles">

                                        <div class="post first hover-dark">
                                            <a tal:attributes="href item/getURL">
                                                <div class="image" tal:attributes="data-src string:${item/getURL}/@@images/image/preview">
                                                </div>
                                            </a>
<!--                                            <div class="meta">
                                                <span class="author">Dave Clark</span>
                                                <span class="date">2h</span>
                                            </div>
-->
                                            <h4><a tal:attributes="href item/getURL" tal:content="item/Title"></a></h4>
                                            <p tal:content="item/description"></p>
                                        </div>
                                    </div>
                                  </div>
</tal:repeat>

                            </div>

                            <div class="row">
                                <div class="col-sm-12 mv3 mvt0">
                                    <a href="entertainment.html">
                                        <img src="https://tpc.googlesyndication.com/simgad/15926840416994248994" alt="廣告" class="full-size">
                                    </a>
                                </div>
                            </div>


<!-- 明鏡火拍 -->
<h3 class="title-border">明鏡火拍</h3>
                            <div class="row">
<tal:repeat repeat="item python:youtubes[0:6]">
                                  <div class="col-md-6">
                                    <div class="category-block articles">
                                        <div class="post first hover-dark">
                                            <a href="${item/getURL}/@@to_youtube" target="_blank">
                                                <div class="image" data-src="${item/getURL}/@@images/image/preview">
                                                </div>
                                            </a>
<!--                                            <div class="meta">
                                                <span class="author">Dave Clark</span>
                                                <span class="date">2h</span>
                                            </div>
-->
                                            <h4>
                                <a href="${item/getURL}/@@to_youtube" target="_blank">${item/Title}</a>
                                            </h4>
                                        </div>
                                    </div>
                                  </div>

</tal:repeat>

                            </div>








<!-- 最新播報 -->
<h3 class="title-border">最新播報</h3>
<div class="row">
<div class="col-md-6">
                            <div class="category-block articles">
<tal:item repeat="item python:list(news)[0:6]">
                                <div class="post hover-light" tal:condition="repeat/item/even">
                                    <a href="${item/absolute_url}">
                                        <div class="image image-thumb"
                                             data-src="${item/getURL}/@@images/image/mini"
                                             style="background-image: url('${item/getURL}/@@images/image/mini');"></div>
                                    </a>
                                    <h4><a href="${item/getURL}">${item/Title}</a></h4>
                                    <p>${python:item.Description[0:110]}...</p>
                                    <div class="meta">
                                        <span class="theme-cover-span date">${python:int(DateTime()-item.created)} 小時前</span>
                                    </div>
                                </div>
</tal:item>
                            </div>
</div>
                           <!-- end .category-block -->
<div class="col-md-6">

                            <div class="category-block articles">
<tal:item repeat="item python:list(news)[0:6]">
                                <div class="post hover-light" tal:condition="repeat/item/odd">
                                    <a href="${item/getURL}">
                                        <div class="image image-thumb"
                                             data-src="${item/getURL}/@@images/image/mini"
                                             style="background-image: url('${item/getURL}/@@images/image/mini');"></div>
                                    </a>
                                    <h4><a href="${item/getURL}">${item/Title}</a></h4>
                                    <p>${python:item.Description[0:110]}...</p>
                                    <div class="meta">
                                        <span class="theme-cover-span date">${python:int(DateTime()-item.created)} 小時前</span>
                                    </div>
                                </div>
</tal:item>

                            </div>
                            <!-- end .category-block -->


</div>

</div>



</div>
<!-- end .parallax-column -->









</section>


</metal:content-core>
</metal:content-core>

</body>
</html>

