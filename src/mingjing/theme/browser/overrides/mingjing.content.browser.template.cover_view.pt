<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="mingjing.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<?python
from plone import api
import random
from DateTime import DateTime
portal = api.portal.get()
mainSliderNews = api.content.find(Type='News Item', id=context.mainSliderNews.split(), sort_on='modified', sort_order='reverse')
youtubes = api.content.find(context=portal, Type='Youtube', sort_on='modified', sort_order='reverse')
todayNews = api.content.find(Type='News Item', id=context.todayNews.split(), sort_on='modified', sort_order='reverse')
tabsNameList_1 = context.tabsName.split()[0].encode('utf-8').split(',')
tabsNameList_2 = context.tabsName.split()[1].encode('utf-8').split(',')
tabsNameList_3 = context.tabsName.split()[1].encode('utf-8').split(',')
tabsBrain_1 = []
for key in tabsNameList_1:
    brain = api.content.find(context=portal, Type='News Item', Subject=key, sort_on='modified', sort_order='reverse')
    tabsBrain_1.append(brain[0:5])
tabsBrain_2 = []
for key in tabsNameList_2:
    brain = api.content.find(context=portal, Type='News Item', Subject=key, sort_on='modified', sort_order='reverse')
    tabsBrain_2.append(brain[0:5])
tabsBrain_3 = []
for key in tabsNameList_3:
    brain = api.content.find(context=portal, Type='News Item', Subject=key, sort_on='modified', sort_order='reverse')
    tabsBrain_3.append(brain[0:5])

newestBook = api.content.find(context=portal, Type='Ebook', id=context.ebooks.split()[0])[0]
hotestBook = api.content.find(context=portal, Type='Ebook', id=context.ebooks.split()[1])[0]
eBook = api.content.find(context=portal, Type='Ebook', id=context.ebooks.split()[2])[0]
ebooks = [newestBook, hotestBook, eBook]

rankingNews = api.content.find(context=portal, Type='News Item', id=context.rankingNews.split(), sort_on='modified', sort_order='reverse')

news = api.content.find(Type='News Item', id=context.mainSliderNews.split(), sort_on='modified', sort_order='reverse')
?>

<!-- 首頁 Main slider start -->
<section tal:define="items python:list(mainSliderNews)[0:10];
                     main_slider_id string:cover_main_slider_1">
    <metal:macro use-macro="context/@@mingjing_macro/macros/main_slider"/>
</section>
<!-- 首頁 Main slider end -->


<section>
    <div class="parallax-content">

<!-- 電視 -->
        <h3 class="category-title"><span>電視</span></h3>

        <div class="row">
            <div class="col-sm-12" tal:define="items python:list(youtubes);
                                               tmp python:random.shuffle(items);
                                               items python:items[0:5];
                                               live_slider_id string:cover_live_slider_3; 
                                               col string:owl-carousel-12">
                <metal:macro use-macro="context/@@mingjing_macro/macros/live_slider" />
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12 col-md-6" tal:define="items python:list(youtubes);
                                               tmp python:random.shuffle(items);
                                               items python:items[0:20];
                                               live_slider_id string:cover_live_slider_3;
                                               col string:owl-carousel-12;
                                               t_title string:明鏡電視">
                <h4 class="program-h4"><a href="https://www.youtube.com/channel/UC3lyWHqUY9IiP4en5jnY6vA" target="_blank">${t_title}</a></h4>
                <metal:macro use-macro="context/@@mingjing_macro/macros/live_program" />
            </div>
            <div class="col-sm-12 col-md-6" tal:define="items python:list(youtubes);
                                               tmp python:random.shuffle(items);
                                               items python:items[0:20];
                                               live_slider_id string:cover_live_slider_3;
                                               col string:owl-carousel-12;
                                               t_title string:明鏡24小時">
                <h4 class="program-h4"><a href="https://www.youtube.com/channel/UC68uS1JD0yAVo4FlBRLuCrA" target="_blank">${t_title}</a></h4>
                <metal:macro use-macro="context/@@mingjing_macro/macros/live_program" />
            </div>
        </div>


<!-- 電台 -->
        <h3 class="category-title"><span>電台</span></h3>

        <div class="row">
            <div class="col-sm-6" tal:define="side string:even">
                <metal:macro use-macro="context/@@mingjing_macro/macros/radio_listing" />
            </div>
            <div class="col-sm-6" tal:define="side string:odd">
                <metal:macro use-macro="context/@@mingjing_macro/macros/radio_listing" />
            </div>
        </div>


<!-- Ad block -->
<p class="margin-line"/>
        <div class="row">
            <div class="col-sm-12 mv3 mvt0">
                <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block"/>
            </div>
        </div>

<!-- 今日播報 -->
        <h3 class="category-title"><span>今日播報</span></h3>
        <div class="row" tal:define="items python:list(todayNews)[0:8]">
            <metal:macro use-macro="context/@@mingjing_macro/macros/listing_with_mini" />
        </div>


<!-- Ad block -->
<p class="margin-line"/>
        <div class="row">
            <div class="col-sm-12 mv3 mvt0">
                <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block"/>
            </div>
        </div>


<!-- Tabs -->
        <div class="row">
            <div class="col-sm-6"
                 tal:define="tabs_name tabsNameList_1;
                             tabs_id_prefix string:cover_tabs_1;
                             brains python:tabsBrain_1;">
                <metal:macro use-macro="context/@@mingjing_macro/macros/views_tabs" />
            </div>
            <div class="col-sm-6"
                 tal:define="tabs_name tabsNameList_2;
                             tabs_id_prefix string:cover_tabs_2;
                             brains python:tabsBrain_2;">
                <metal:macro use-macro="context/@@mingjing_macro/macros/views_tabs" />
            </div>
        </div>


<!-- Ad block -->
        <div class="row">
            <div class="col-sm-12 mv3 mvt0">
                <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block"/>
            </div>
        </div>

<!-- Tabs -->
        <div class="row">
            <div class="col-sm-6"
                 tal:define="tabs_name tabsNameList_2;
                             tabs_id_prefix string:cover_tabs_3;
                             brains python:tabsBrain_3;">
                <metal:macro use-macro="context/@@mingjing_macro/macros/views_tabs" />
            </div>
            <div class="col-sm-2" tal:repeat="item python:['最新書刊', '最熱書刊', '電子書刊']">
                <h5 class="category-title ebook"><span>${item}</span></h5>
                <div class="ebook-cover">
                    <a href="${python:ebooks[repeat['item'].index].getURL()}" title="${python:ebooks[repeat['item'].index].Title}">
                        <img src="${python:ebooks[repeat['item'].index].getURL()}/@@images/image" alt="${python:ebooks[repeat['item'].index].Description}"/>
                    </a>
                </div>
            </div>
        </div>


<!-- 排行榜 -->
        <h3 class="category-title"><span>排行榜</span></h3>
        <div class="row" tal:define="items python:list(rankingNews)[0:6]">
            <metal:macro use-macro="context/@@mingjing_macro/macros/listing_with_mini" />
        </div>

    </div>
    <!-- end .parallax-content -->

</section>


</metal:content-core>
</metal:content-core>

</body>
</html>

