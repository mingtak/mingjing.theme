<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="mingjing.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<?python
from plone import api
from DateTime import DateTime
portal = api.portal.get()
news = api.content.find(context=portal['news']['1'], Type='News Item', sort_on='modified', sort_order='reverse')
hots = api.content.find(context=portal['news']['2'], Type='News Item', sort_on='modified', sort_order='reverse')
youtubes = api.content.find(context=portal, Type='Youtube', sort_on='created', sort_order='reverse')
hot_news = api.content.find(context=context, Type='News Item', sort_on='modified', sort_order='reverse')
children_folder= api.content.find(context=context, Type='Folder')
?>

<!-- 廣告 -->
<!--    <div class="row">
        <div class="col-sm-12 mv3 mvt0">
            <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block" />
        </div>
    </div>
-->

<!-- Main slider start -->
<section tal:define="items python:list(news)[0:8];
                     main_slider_id string:cover_main_slider_1">
    <metal:macro use-macro="context/@@mingjing_macro/macros/main_slider"/>
</section>
<!-- Main slider end -->


<section>
    <div class="parallax-content">

<!-- 焦點話題 -->

        <h3 class="title-middle title-border">焦點話題</h3>
        <tal:hot_news define="items python:hot_news[0:4]">
            <metal:macro use-macro="context/@@mingjing_macro/macros/hot_news" />
        </tal:hot_news>

<!-- 廣告 -->
        <div class="row">
            <div class="col-sm-12 mv3 mvt0">
                <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block" />
            </div>
        </div>



<!-- 新聞列表 -->
        <h3 class="category-title"><span>新聞列表</span></h3>
            <tal:listing define="items python:hot_news[:6]">
                <metal:macro use-macro="context/@@mingjing_macro/macros/item_listing" />
            </tal:listing>

<!-- 分類消息 -->
        <h3 class="title-middle title-border mt3">分類新聞</h3>
            <tal:listing define="items children_folder">
                <metal:macro use-macro="context/@@mingjing_macro/macros/categories_listing" />
            </tal:listing>


    </div>
    <!-- end .parallax-content -->

</section>


</metal:content-core>
</metal:content-core>

</body>
</html>

